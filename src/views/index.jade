doctype html
html(class="no-js", lang="")
	head
		meta(charset="utf-8")
		meta(http-equiv="x-ua-compatible", content="ie=edge")
		title= title
		meta(name="description", description=description)
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel="apple-touch-icon", href="apple-touch-icon.png")
		link(rel="stylesheet", href="lib/css/bootstrap-grid.min.css")
		link(rel="stylesheet", href="lib/css/github.css")
		link(rel="stylesheet", href="lib/css/duoshuo.css")
		link(rel="stylesheet", href="http://cdn.staticfile.org/font-awesome/4.2.0/css/font-awesome.min.css")
		style#css!= css
	body
		#app!= body
		script#source(src=entry, data-initial-state=state)
		script.
			window.ga = function () {
				ga.q.push(arguments)
			};ga.q = [];ga.l = +new Date;
			ga('create', '#{trackingId}', 'auto');ga('send', 'pageview')
		if trackingId
			script(src="https://www.google-analytics.com/analytics.js", async=true, defer=true)
